<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="720.0" prefWidth="1080" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="teacher.TeacherHostController">
   <children>
      <VBox layoutX="14.0" layoutY="24.0" prefHeight="720" prefWidth="1080" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <children>
            <Label fx:id="labelName" prefHeight="42.0" prefWidth="883.0" text="Label" />
            <Label text="Enter Subject:">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <TextField onAction="#entertextfieldSubject" />
            <Label text="Enter Quiz Name:">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <TextField onAction="#entertextfieldQuizName" />
            <Label text="Enter Section:">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <TextField onAction="#entertextfieldSection" />
            <Label text="Enter time for Quiz:">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <TextField onAction="#entertextfieldTime" prefHeight="26.0" prefWidth="622.0" />
            <Label text="Enter Question:">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <TextArea fx:id="textareaQues" prefHeight="200.0" prefWidth="200.0" />
            <Label text="Option 1:" />
            <TextField onAction="#entertextfieldOp1" />
            <Label text="Option 2:" />
            <TextField onAction="#entertextfieldOp2" />
            <Label text="Option 3:" />
            <TextField onAction="#entertextfieldOp3" />
            <Label text="Option 4:" />
            <TextField onAction="#entertextfieldOp4" />
            <Label text="Right Answer:" />
            <TextField onAction="#entertextfieldAnswer" />
            <ButtonBar prefHeight="40.0" prefWidth="200.0">
              <buttons>
                <Button mnemonicParsing="false" onAction="#pressedAddbutton" text="Add" />
                  <Button mnemonicParsing="false" onAction="#pressedHostExitbutton" text="Host and Exit" />
              </buttons>
            </ButtonBar>
         </children>
      </VBox>
   </children>
</AnchorPane>
